<div class="flash">
  <%= flash[:notice] %>
</div>

<body>
<h1>Books</h1>


  <main>

    <table height="auto" width="auto">
      <thead>
       <tr>
        <th width="auto">Title</th>
        <th width="auto">Body</th>
        <th colspan="3"></th>
       </tr>
      </thead>

      <tbody>
       <% @books.each do |book| %>

         <tr>
          <td width="auto"><span><%= book.title %></span></td>
          <td width="auto"><span><%= book.body %></span></td>
          <td><%= link_to "Show", "/books/#{book.id}" %></td>
          <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
          <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, data: {confirm: "Are you sure?"} %></td>
         </tr>

       <% end %>
      </tbody>
    </table>


  </main>


  <h1>New book</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book, url: '/books',method: :post do |f| %>

  <h4 class="new-title">Title</h4>
  <div class="new-title-name"><%= f.text_field :title %></div>

  <h4 class="new-body">Body</h4>
  <div class="new-body-text"><%= f.text_area :body %></div>

  <div class="submit-botun"><%= f.submit " Create Book " %></div>
<% end %>



</body>