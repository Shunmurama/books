<h1>Editing Book</h1>

  <% if @book.errors.any? %>
   <div class="error-box">
    <h4 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    <ul class="error">
      <% @book.errors.full_messages.each do |message| %>
       <li class="error-messages"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

<%= form_with model: @book do |f| %>

<div class="edit-box">
 <h4 class="edit-title">Title</h4>
  <div class="edit-text"><%= f.text_field:title %></div>

 <h4 class="edit-body">Body</h4>
  <div class="edit-text"><%= f.text_area:body %> </div>

   <div class="update"><%= f.submit ' Update Book ' %></div>

</div>

 <div class="button">
 <%= link_to "Show", book_path(@book.id) %>

 <%= link_to "Back", "/books" %>
 </div>

<% end %>
